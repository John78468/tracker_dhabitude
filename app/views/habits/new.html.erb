<div class="container mx-auto">
  <h1 class="text-2xl font-bold mb-4">Ajouter une nouvelle habitude</h1>

  <%= form_with model: @habit, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :name, "Nom de l'habitude", class: "block text-gray-700" %>
      <%= form.text_field :name, class: "w-full p-2 border rounded-lg" %>
    </div>

    <%= form.submit "Ajouter", class: "bg-blue-500 text-white px-4 py-2 rounded-lg" %>
  <% end %>

  <%= link_to 'Retour', habits_path, class: "mt-4 inline-block text-blue-500 hover:underline" %>
</div>
